@page "/admin/facility"
@using BusinessObjects.Enums
@model FindingHealthcareSystem.Pages.Admin.Facility.IndexModel
@{
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Danh sách cơ sở y tế";
}

<div class="container-fluid mt-10">
    <div class="card shadow">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h2 class="mb-0">Danh sách cơ sở y tế</h2>
            <a asp-page="/Admin/Facility/Create" class="btn btn-success">
                <i class="fas fa-plus me-2"></i> Thêm cơ sở mới
            </a>
        </div>
        <div class="card-body">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (Model.Facilities != null && Model.Facilities.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover align-middle">
                        <thead class="table-dark">
                            <tr>
                                <th>Mã</th>
                                <th>Tên cơ sở</th>
                                <th>Loại</th>
                                <th>Địa chỉ</th>
                                <th>Ngày hoạt động</th>
                                <th>Trạng thái</th>
                                <th>Chuyên khoa</th>
                                <th class="text-center">Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var facility in Model.Facilities)
                            {
                                <tr>
                                    <td>@facility.Id</td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            @if (!string.IsNullOrEmpty(facility.ImgUrl))
                                            {
                                                <img src="@facility.ImgUrl" alt="@facility.Name" class="rounded-circle me-2" style="width:50px; height:50px; object-fit:cover;">
                                            }
                                            else
                                            {
                                                <div class="rounded-circle bg-secondary d-flex align-items-center justify-content-center me-2" style="width:50px; height:50px;">
                                                    <i class="fas fa-hospital text-white"></i>
                                                </div>
                                            }
                                            <div>
                                                <span class="fw-bold">@facility.Name</span>
                                            </div>
                                        </div>
                                    </td>
                                    <td>@(facility.Type?.Name ?? "Chưa phân loại")</td>
                                    <td>
                                        <small>
                                            @(!string.IsNullOrEmpty(facility.Address) ? facility.Address + ", " : "")
                                            @(!string.IsNullOrEmpty(facility.Ward) ? facility.Ward + ", " : "")
                                            @(!string.IsNullOrEmpty(facility.District) ? facility.District + ", " : "")
                                            @(!string.IsNullOrEmpty(facility.Province) ? facility.Province : "")
                                        </small>
                                    </td>
                                    <td>@(facility.OperationDay.HasValue ? facility.OperationDay.Value.ToString("dd/MM/yyyy") : "Chưa xác định")</td>
                                    <td>
                                        @switch (facility.Status)
                                        {
                                            case FacilityStatus.Active:
                                                <span class="badge bg-success">Hoạt động</span>
                                                break;
                                            case FacilityStatus.Inactive:
                                                <span class="badge bg-warning">Đóng cửa</span>
                                                break;
                                            default:
                                                <span class="badge bg-secondary">Khác</span>
                                                break;
                                        }
                                    </td>
                                    <td>
                                        @if (facility.FacilityDepartments != null && facility.FacilityDepartments.Any())
                                        {
                                            <div class="department-badges">
                                                @foreach (var dept in facility.FacilityDepartments.Take(3))
                                                {
                                                    <span class="badge bg-primary mb-1">@dept.Department?.Name</span>
                                                }
                                                @if (facility.FacilityDepartments.Count() > 3)
                                                {
                                                    <span class="badge bg-secondary">+@(facility.FacilityDepartments.Count() - 3)</span>
                                                }
                                            </div>
                                        }
                                        else
                                        {
                                            <span class="text-muted small">Chưa có chuyên khoa</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="d-flex justify-content-center gap-2">
                                            <a asp-page="/Admin/Facility/Details" asp-route-id="@facility.Id" class="btn btn-info btn-sm">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-page="/Admin/Facility/Edit" asp-route-id="@facility.Id" class="btn btn-primary btn-sm">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#deleteModal-@facility.Id">
                                                <i class="fas fa-trash"></i>
                                            </button>

                                            @if (facility.Status != FacilityStatus.Active)
                                            {
                                                <form method="post" asp-page-handler="Activate" asp-route-id="@facility.Id" class="d-inline">
                                                    <button type="submit" class="btn btn-success btn-sm" title="Kích hoạt">
                                                        <i class="fas fa-check-circle"></i>
                                                    </button>
                                                </form>
                                            }
                                            else
                                            {
                                                <form method="post" asp-page-handler="Deactivate" asp-route-id="@facility.Id" class="d-inline">
                                                    <button type="submit" class="btn btn-warning btn-sm" title="Tạm dừng">
                                                        <i class="fas fa-pause-circle"></i>
                                                    </button>
                                                </form>
                                            }
                                        </div>

                                        <!-- Modal Xác nhận xóa -->
                                        <div class="modal fade" id="deleteModal-@facility.Id" tabindex="-1" aria-labelledby="deleteModalLabel-@facility.Id" aria-hidden="true">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title" id="deleteModalLabel-@facility.Id">Xác nhận xóa</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <p>Bạn có chắc chắn muốn xóa cơ sở y tế <strong>@facility.Name</strong>?</p>
                                                        <p class="text-danger"><small>Hành động này không thể hoàn tác.</small></p>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                                                        <form method="post" asp-page-handler="Delete" asp-route-id="@facility.Id" class="d-inline">
                                                            <button type="submit" class="btn btn-danger">Xác nhận xóa</button>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info text-center py-5">
                    <i class="fas fa-info-circle fa-3x mb-3"></i>
                    <h4>Chưa có cơ sở y tế nào</h4>
                    <p>Hãy thêm cơ sở y tế đầu tiên để bắt đầu.</p>
                    <a asp-page="/Admin/Facility/Create" class="btn btn-primary mt-2">
                        <i class="fas fa-plus me-2"></i> Thêm cơ sở mới
                    </a>
                </div>
            }
        </div>
    </div>
</div>