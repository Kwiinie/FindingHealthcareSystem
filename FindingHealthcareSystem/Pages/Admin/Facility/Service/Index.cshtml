@page "/admin/facility/service"
@model FindingHealthcareSystem.Pages.Admin.Facility.Service.IndexModel
@{
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Danh sách dịch vụ công khai";
}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Danh sách Dịch vụ</h1>
        <a asp-page="./Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Thêm mới
        </a>
    </div>

    @if (!Model.Services.Any())
    {
        <div class="alert alert-info">
            Không có dữ liệu dịch vụ.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-light">
                    <tr>
                        <th>ID</th>
                        <th>Tên</th>
                        <th>Mô tả</th>
                        <th>Giá</th>
                        <th>Trạng thái</th>
                        <th>Ngày tạo</th>
                        <th>Ngày cập nhật</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Services)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>@item.Description</td>
                            <td>@item.Price</td>
                            <td>
                                @if (item.IsDeleted == true)
                                {
                                    <span class="badge bg-danger">Đã xóa</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">Hoạt động</span>
                                }
                            </td>
                            <td>@item.CreatedAt?.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>@item.UpdatedAt?.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                                        <i class="bi bi-eye"></i> Chi tiết
                                    </a>
                                    <a asp-page="/admin/facility/service/edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">
                                        <i class="bi bi-pencil-square"></i> Sửa
                                    </a>
                                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                        <i class="bi bi-trash"></i> Xóa
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>