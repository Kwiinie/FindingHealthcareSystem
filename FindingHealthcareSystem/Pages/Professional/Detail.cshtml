                        <input type="text" class="form-control" id="editSpecialties" value="">
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label for="editEmail" class="form-label">Email</label>
                            <input type="email" class="form-control" id="editEmail" value="john.doe@example.com">
                        </div>
                        <div class="col-md-6">
                            <label for="editPhone" class="form-label">Số điện thoại</label>
                            <input type="tel" class="form-control" id="editPhone" value="+1 234 567 890">
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4">
                            <label for="editProvince" class="form-label">Tỉnh/thành phố</label>
                            <input type="text" class="form-control" id="editProvince" value="Province A">
                        </div>
                        <div class="col-md-4">
                            <label for="editDistrict" class="form-label">Quận/huyện</label>
                            <input type="text" class="form-control" id="editDistrict" value="District 1">
                        </div>
                        <div class="col-md-4">
                            <label for="editWard" class="form-label">Phường xã</label>
                            <input type="text" class="form-control" id="editWard" value="Ward B">
                        </div>
                    </div>

