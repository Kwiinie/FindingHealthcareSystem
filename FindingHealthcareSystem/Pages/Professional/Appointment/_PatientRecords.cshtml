@model Pages.Professional.Appointment.IndexModel
<div class="card border-0 rounded-3 shadow-sm">
    <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
        <h5 class="card-title m-0">Bệnh nhân gần đây</h5>
        <a href="#" class="btn btn-sm btn-outline-primary">Xem tất cả</a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Mã BN</th>
                        <th>Bệnh nhân</th>
                        <th>Lần khám gần nhất</th>
                        <th>Chẩn đoán</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.PatientRecently != null)
                    {
                        foreach (var item in Model.PatientRecently)
                        {
                            <tr>
                                <td><span class="badge bg-light text-dark" style="width: 50px;">@item.Patient.Id</span></td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="rounded-circle bg-light d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                            <i class="bi bi-person text-secondary"></i>
                                        </div>
                                        <div class="ms-3">
                                            <div class="fw-medium">@item.Patient.User.Fullname</div>
                                            <small class="text-muted">@item.Age | @item.Patient.User.Gender</small>
                                        </div>
                                    </div>
                                </td>
                                <td>@item.Date</td>
                                <td>
                                    <div style="text-overflow: ellipsis; width: 200px;white-space: nowrap;">
                                        @item.Description
                                    </div>
                                </td>
                                <td>
                                    <div class="dropdown">
                                        <button class="btn btn-sm btn-light" type="button" data-bs-toggle="dropdown" data-bs-popper="static" aria-expanded="false">
                                            <i class="bi bi-three-dots-vertical"></i>
                                        </button>
                                        <ul class="dropdown-menu dropdown-menu-end">
                                            <li><a class="dropdown-item" href="#"><i class="bi bi-eye me-2"></i>Xem chi tiết</a></li>
                                            <li><a class="dropdown-item" href="#"><i class="bi bi-file-earmark-medical me-2"></i>Hồ sơ bệnh án</a></li>
                                            <li><hr class="dropdown-divider"></li>
                                            <li><a class="dropdown-item text-warning" href="#"><i class="bi bi-exclamation-triangle me-2"></i>Báo cáo</a></li>
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
        <div class="pagination">
            <button class="paging-btn" disabled="@(Model.CurrentPage == 1)" onclick="loadPage(@(Model.CurrentPage - 1))">
                <i class="bi bi-chevron-left"></i>
            </button>
            <input class="input-page" value="@Model.CurrentPage" />
            <button class="paging-btn" onclick="loadPage(@(Model.CurrentPage + 1))">
                <i class="bi bi-chevron-right"></i>
            </button>
        </div>
    </div>
</div>