@page "/login"
@model FindingHealthcareSystem.Pages.Auth.LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = "_LoginLayout";  
}

<div class="login-container">
    <h2 class="fw-bolder text-black-50 mb-5">Đăng nhập vào FindingHealthcare</h2>
    <form method="post">
        <div class="form-group">
            <label for="EmailPhone">Email</label>
            <input type="text" id="Email" name="Email" class="form-control" required placeholder="Email" />
        </div>
        <div class="form-group">
            <label for="Password">Mật khẩu</label>
            <input type="password" id="Password" name="Password" class="form-control" required placeholder="Mật khẩu" />
        </div>
        <button type="submit" class="btn btn-login">Đăng nhập</button>
        <div class="forgot-password">
            <a href="#">Quên mật khẩu?</a>
        </div>
        <div class="signup">
            <button type="button" class="btn btn-signup">Tạo tài khoản mới</button>
        </div>
    </form>
</div>
