@page "/articles"
@model FindingHealthcareSystem.Pages.Article.IndexModel
@{
    ViewData["Title"] = "Articles";
}
<h2>Articles</h2>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Category</th>
            <th>Created At</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var article in Model.Articles)
        {
            <tr>
                <td>@article.Title</td>
                <td>@article.CategoryName</td>
                <td>@article.CreatedAt.ToString("yyyy-MM-dd")</td>
                <td>
                    <a asp-page="./Detail" asp-route-id="@article.Id">View</a>
                </td>
            </tr>
        }
    </tbody>
</table>